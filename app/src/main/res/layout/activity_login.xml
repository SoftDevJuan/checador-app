<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_soft"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- LOGOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_logo_ccl"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Logo CCL" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_logo_jalisco"
                    android:contentDescription="Logo Jalisco" />
            </LinearLayout>

            <!-- TÍTULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acceso al Checador"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_dark"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tus credenciales para continuar"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- BOTÓN GOOGLE CORREGIDO -->
            <!-- 1. Se quitó la 'G' del texto -->
            <!-- 2. Se usa drawableStart para tu imagen PNG -->
            <!-- 3. Se agregó drawablePadding para separar imagen y texto -->
            <Button
                android:id="@+id/btn_google_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión con Google"
                android:textColor="@color/color_text_dark"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:backgroundTint="@color/white"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_google_logo"
                app:iconTint="@null"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- CAMPO USUARIO CORREGIDO -->
            <!-- android:hint MOVIDO AQUI AL PADRE -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="#666666"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/color_primary_ccl"
                app:hintTextColor="@color/color_primary_ccl"
                android:textColorHint="#666666"
                android:layout_marginBottom="8dp">

                <!-- android:hint ELIMINADO DE AQUI (HIJO) -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_dark"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CAMPO CONTRASEÑA CORREGIDO -->
            <!-- android:hint MOVIDO AQUI AL PADRE -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#666666"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#666666"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/color_primary_ccl"
                app:hintTextColor="@color/color_primary_ccl"
                android:textColorHint="#666666"
                android:layout_marginBottom="24dp">

                <!-- android:hint ELIMINADO DE AQUI (HIJO) -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_dark"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:backgroundTint="@color/color_primary_ccl"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:padding="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>