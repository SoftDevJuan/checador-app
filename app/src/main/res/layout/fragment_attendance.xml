<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".AttendanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1. PERFIL RESUMIDO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_profile_attendance"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/circulo_blanco"
                    android:padding="0dp"
                    android:contentDescription="Foto de Perfil"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_employee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando nombre..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_dark"/>

                    <TextView
                        android:id="@+id/txt_employee_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puesto: ..."
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. TÍTULO DE SECCIÓN Y FILTROS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtros de Fecha"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_secondary_ccl"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_quincena_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q. Actual"
                android:textSize="12sp"
                android:backgroundTint="@color/color_primary_ccl"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp"/>

            <!-- Puedes agregar más botones aquí después -->
            <Button
                android:id="@+id/btn_quincena_anterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q. Anterior"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/color_primary_ccl"
                app:strokeColor="@color/color_primary_ccl"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"/>
        </LinearLayout>

        <!-- 3. LISTA DE REGISTROS (RECYCLERVIEW) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Registros"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_dark"
            android:layout_marginBottom="12dp"/>

        <!-- Aquí es donde se dibujará la lista de tarjetas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_attendance_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_attendance_record"
            tools:itemCount="3"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>